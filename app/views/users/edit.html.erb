<h1>Edit User</h1>

<%= form_for(@user) do |f| %>

  <%= render 'fields', :f => f %>
  
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
  
<% end %>  



<br />

<div class="field">
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails" target="_blank">Change</a>
</div>

